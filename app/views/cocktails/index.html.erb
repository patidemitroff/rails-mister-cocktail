
<div class="container">
  <h3>Cocktails in da house</h3>
  <ul>
    <% @cocktails.each do |cocktail| %>
        <li><% if cocktail.photo? %>
              <%= cl_image_tag cocktail.photo.path, width: 200, height: 300, crop: :fill %>
            <% end %></li>
      <li><%= cocktail.name %></li>
      <%= link_to 'See details', cocktail %>
      <%= link_to 'Add a new dose', new_cocktail_dose_path(cocktail) %>
    <% end %>
  </ul>

  <p><%= link_to 'Add a new cocktail', new_cocktail_path %></p>

</div>
