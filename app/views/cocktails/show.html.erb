



<div class="container">
<% if @cocktail.photo? %>
<%= cl_image_tag @cocktail.photo.path, width: 200, height: 300, crop: :fill %>
<% end %>
  <h3><%= @cocktail.name %></h3>
    <% @cocktail.doses.each do |dose| %>
      <h4><%= dose.ingredient.name %></h4>
      <p><%= dose.amount %></p>
      <p><%= dose.description %></p>
      <p><%= link_to 'Delete this dose', dose_path(dose), method: 'delete', data: {confirm: 'Are you sure?' } %></p>
    <% end %>

  <p><%= link_to 'Back', cocktails_path %></p>
</div>



